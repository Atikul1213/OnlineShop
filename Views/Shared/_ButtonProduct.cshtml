@model int

<td style="width:150px">
    <div class="btn-group">
        <a asp-action="Edit" asp-controller="Product" class="btn btn-success" asp-route-id="@Model"><i class="bi bi-pencil-fill"></i></a>
        <a asp-action="Details" asp-controller="Product" class="btn btn-primary" asp-route-id="@Model"><i class="bi bi-list-check"></i></a>
        <a asp-action="Delete" asp-controller="Product" class="btn btn-danger" asp-route-id="@Model"><i class="bi bi-trash"></i></a>

    </div>

</td>

