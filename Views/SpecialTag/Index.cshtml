@using OnlineShop.Models;
@model IEnumerable<SpecialTag>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Tag List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="SpecialTag" asp-action="Create" class="btn btn-primary">

                <i class="bi bi-plus-circle"></i>Create Tag
            </a>

        </div>
    </div>

    <table class="table table-striped border">
        <tr class="table-info">
            <th>Id</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <!--  <td>Edit | Details | Delete</td> -->
                <td>
                    <partial name="_ButtonSpecial" model="@item.Id" />
                </td>
            </tr>
        }
    </table>
</div>
