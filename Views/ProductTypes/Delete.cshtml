@using OnlineShop.Models;
@model OnlineShop.Models.ProductTypes


@{
    ViewData["Title"] = "Delete";
}

<br />
<br />


<form asp-action="Delete" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Product
            </h2>
            <hr />
        </div>
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="ProductType" class="p-0"> </label>
            <input asp-for="ProductType" readonly="readonly" class="form-control" />
            <span asp-validation-for="ProductType" class="text-dandger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" class="btn btn-success">Back to Product</a>
        </div>
    </div>
</form>