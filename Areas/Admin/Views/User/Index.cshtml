@using OnlineShop.Models;
@model IEnumerable<OnlineShopUser>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />


<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">

                <i class="bi bi-plus-circle"></i>Create New User
            </a>

        </div>


    </div>


    <table class="table table-striped border" id="myTable">
        <thead>
            <tr class="table-info">
                <th>@Html.DisplayNameFor(c => c.Id)</th>
                <th>@Html.DisplayNameFor(c => c.UserName)</th>
                <th>@Html.DisplayNameFor(c => c.Email)</th>
                <th>@Html.DisplayNameFor(c => c.FirstName)</th>
                <th>@Html.DisplayNameFor(c => c.LastName)</th>
              
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <!--  <td>Edit | Details | Delete</td> -->
                    <td>
                        <partial name="_ButtonProduct" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        });
    </script>
}