@model OnlineShopUser

@{
    ViewData["Title"] = "Create";
    TempData["Success"] = "Create";
}

<br />
<br />

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">
                    Add New User
                </h2>
            </div>
        </div>

    </div>



    <div class="card-body p-4">
        <form asp-action="Create" method="post" id="user-form">
            <div class="p-4 rounded border">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <h3>@ViewBag.message</h3>

                <div class="mb-3 row p-1">
                    <label asp-for="UserName" class="p-0"> </label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-dandger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="Email" class="p-0"> </label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-dandger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="FirstName" class="p-0"> </label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-dandger"></span>
                </div>

                <div class="mb-3 row p-1">
                    <label asp-for="LastName" class="p-0"> </label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-dandger"></span>
                </div>


                <div class="mb-3 row p-1">
                    <label asp-for="PasswordHash" class="p-0"> </label>
                    <input asp-for="PasswordHash" type="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-dandger"></span>
                </div>

                


                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Save" />
                    <a asp-action="Index" class="btn btn-success">Back to Product</a>
                </div>
            </div>


        </form>
    </div>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    $(document).ready(functioin(){
        $("#user-form").validate({
            rules:{
                UserName: {
                    required : true,
                },

                FirstName: {
                    required : true,
                },
                LastName : {
                    required : true,
                }

            },

            message : {
                UserName : "Enter your email",
                FirstName : "Enter your FirstName",
                LastName : "Enter your LastName"
            }
        });


    });
}